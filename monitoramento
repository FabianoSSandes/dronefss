<script>
let map;
let currentLayer;
let drawnItems;

function initMap() {
  if (document.getElementById('mapContainer')) {
    map = L.map('mapContainer').setView([-23.5505, -46.6333], 13); // Coordenadas de São Paulo
    currentLayer = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
      attribution: '© ArcGIS'
    }).addTo(map);

    drawnItems = new L.FeatureGroup();
    map.addLayer(drawnItems);

    var drawControl = new L.Control.Draw({
      edit: {
        featureGroup: drawnItems
      },
      draw: {
        polygon: true,
        polyline: false,
        rectangle: false,
        circle: false,
        marker: false,
        circlemarker: false
      }
    });
    map.addControl(drawControl);

    map.on('draw:created', function(e) {
      var layer = e.layer;
      drawnItems.addLayer(layer);
      updateWaypoints(layer);
      updateFlightArea(layer);
    });

    map.on('draw:edited', function(e) {
      var layers = e.layers;
      layers.eachLayer(function(layer) {
        updateWaypoints(layer);
        updateFlightArea(layer);
      });
    });

    map.on('draw:deleted', function(e) {
      clearWaypoints();
      updateFlightArea(null);
    });
  } else {
    console.error('Contêiner do mapa não encontrado');
  }
}

function updateWaypoints(layer) {
  var coordinates = layer.getLatLngs()[0];
  var waypointsList = document.getElementById('waypointsList');
  waypointsList.innerHTML = '';

  coordinates.forEach(function(coord, index) {
    var li = document.createElement('li');
    li.className = 'flex justify-between items-center';
    li.innerHTML = `
      <span class="text-text-secondary">Ponto ${index + 1}</span>
      <span class="text-text-primary font-medium">${coord.lat.toFixed(4)}° S, ${coord.lng.toFixed(4)}° O</span>
    `;
    waypointsList.appendChild(li);
  });
}

function clearWaypoints() {
  var waypointsList = document.getElementById('waypointsList');
  waypointsList.innerHTML = '';
}

function updateFlightArea(layer) {
  var areaElement = document.getElementById('flightAreaValue');
  if (layer) {
    var area = L.GeometryUtil.geodesicArea(layer.getLatLngs()[0]);
    areaElement.textContent = area.toFixed(2) + ' m²';
  } else {
    areaElement.textContent = '0 m²';
  }
}

function showMissionModal(missionName) {
  // Implementação para mostrar o modal de missão
}

function closeMissionModal() {
  // Implementação para fechar o modal de missão
}

document.addEventListener('DOMContentLoaded', function() {
  initMap();
  
  // Adiciona evento de clique para o botão de copiar coordenadas
  document.getElementById('copyWaypointsBtn').addEventListener('click', function() {
    var coordinates = [];
    drawnItems.eachLayer(function(layer) {
      if (layer instanceof L.Polygon) {
        var latlngs = layer.getLatLngs()[0];
        latlngs.forEach(function(latlng) {
          coordinates.push(latlng.lat.toFixed(6) + ',' + latlng.lng.toFixed(6));
        });
      }
    });
    
    if (coordinates.length > 0) {
      var coordText = coordinates.join('\n');
      navigator.clipboard.writeText(coordText).then(function() {
        // Mostra a mensagem de cópia
        var copyMessage = document.getElementById('copyMessage');
        copyMessage.style.opacity = '1';
        setTimeout(function() {
          copyMessage.style.opacity = '0';
        }, 2000);
      }).catch(function(err) {
        console.error('Falha ao copiar coordenadas: ', err);
      });
    } else {
      alert('Não há coordenadas de polígono para copiar. Por favor, desenhe um polígono primeiro.');
    }
  });
});

// Event listeners para os botões
document.getElementById('modeTerrain').addEventListener('click', function() {
  currentLayer.setUrl('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png');
  updateButtonStyles(this);
});

document.getElementById('modeSatellite').addEventListener('click', function() {
  currentLayer.setUrl('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}');
  updateButtonStyles(this);
});

document.getElementById('modeTopographical').addEventListener('click', function() {
  currentLayer.setUrl('https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png');
  updateButtonStyles(this);
});

document.getElementById('mode3D').addEventListener('click', function() {
  // Implementar lógica de visualização 3D aqui
  console.log('Visualização 3D não implementada nesta demonstração');
});

function updateButtonStyles(clickedButton) {
  const buttons = ['modeTerrain', 'modeSatellite', 'modeTopographical', 'mode3D'];
  buttons.forEach(id => {
    const button = document.getElementById(id);
    if (button === clickedButton) {
      button.classList.remove('bg-bg-primary', 'text-text-secondary');
      button.classList.add('bg-highlight-color', 'text-white');
    } else {
      button.classList.remove('bg-highlight-color', 'text-white');
      button.classList.add('bg-bg-primary', 'text-text-secondary');
    }
  });
}

document.getElementById('searchButton').addEventListener('click', function() {
  var searchQuery = document.getElementById('locationSearch').value;
  searchLocation(searchQuery);
});

document.getElementById('startMissionBtn').addEventListener('click', function() {
  // Implementar lógica de início de missão aqui
  console.log('Iniciando missão');
});

function searchLocation(query) {
  if (!query) {
    alert('Por favor, insira um local para buscar.');
    return;
  }

  // Usa a API do OpenStreetMap Nominatim para geocodificação
  fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}`)
    .then(response => response.json())
    .then(data => {
      if (data && data.length > 0) {
        const result = data[0];
        const lat = parseFloat(result.lat);
        const lon = parseFloat(result.lon);
        map.setView([lat, lon], 13);
        L.marker([lat, lon]).addTo(map)
          .bindPopup(result.display_name)
          .openPopup();
      } else {
        alert('Local não encontrado. Por favor, tente um termo de busca diferente.');
      }
    })
    .catch(error => {
      console.error('Erro ao buscar o local:', error);
      alert('Ocorreu um erro ao buscar o local. Por favor, tente novamente.');
    });
}

// Adiciona evento de tecla Enter no campo de busca
document.getElementById('locationSearch').addEventListener('keypress', function(event) {
  if (event.key === 'Enter') {
    event.preventDefault();
    document.getElementById('searchButton').click();
  }
});
</script>
</body></html>
